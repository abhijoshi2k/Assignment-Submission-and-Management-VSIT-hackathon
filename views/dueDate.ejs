    <!-- CSS -->
    <link rel="stylesheet" href="../../public/css/style.css">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">


    
</head>
<body>

	<div class="bg-dark text-white">
		<div class="container">
			<div class="row pt-3">
				<div class="col-md-6 col-12">

					<p><%= email %></p>
				</div>

				<div class="col-md-6 col-12">
					<p class="text-md-right"><%= name %></p>
				</div>
				<div class="col-12 mb-3">
					<div class="text-right">
						<a href="/logout" class="btn btn-danger">Logout</a>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="container">

		<h3><%= title %></h3>

		<p>
      <%= desc %>
      <% if(file){ %>
        <br>
        <a href="data:application/octet-stream;base64,<%= file.toString('base64') %>" target="_blank" download = "<%= title %>.pdf">Attached File</a>
      <% } %>
    </p>
			
      
      <div class="row">
	<div class="col-2">
    <h4>Status:</h4>
        </div></div>
        
        <div class="row">
            <div class="container">
              <div class="panel-group">
    <h4>    <div class="panel panel-danger">
      <div class="panel-heading text-center">Due Date Missed</div>
	  
    </div></h4>

          
            </div>
    </div>
          
        </div>
   </div>


